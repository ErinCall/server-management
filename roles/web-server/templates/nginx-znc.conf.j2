# {{ ansible_managed }}
upstream znc {
  server localhost:65431 weight=1;
}

server {
  listen      *:80;
  if ($ssl_protocol = "") {
    rewrite ^ https://$server_name$request_uri? permanent;
  }
  server_name irc.andrewlorente.com;
}

server {
  listen      *:443;
  server_name irc.andrewlorente.com;

  ssl on;
  ssl_certificate /etc/ssl/STAR_andrewlorente_com.chained.crt;
  ssl_certificate_key /etc/ssl/andrewlorente.com.key;
  ssl_session_cache shared:SSL:50m;
  ssl_session_timeout 5m;

  ssl_protocols TLSv1 TLSv1.2;
  ssl_ciphers "EECDH+ECDSA+AESGCM EECDH+aRSA+AESGCM EECDH+ECDSA+SHA384 EECDH+ECDSA+SHA256 EECDH+aRSA+SHA384 EECDH+aRSA+SHA256 EECDH EDH+aRSA !RC4 !aNULL !eNULL !LOW !3DES !MD5 !EXP !PSK !SRP !DSS";
  ssl_prefer_server_ciphers on;
  location ~ / {
    proxy_pass http://znc;

    proxy_set_header HTTP_HOST $http_host;
    proxy_set_header Host $host;
    proxy_set_header REMOTE_ADDR $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;

  }

}
