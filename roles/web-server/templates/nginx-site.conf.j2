# {{ ansible_managed }}
upstream {{ item.name }} {
  server localhost:{{ item.port }} weight=1;
}

server {
  listen      *:80;
  add_header X-Clacks-Overhead "GNU Terry Pratchett";
  if ($ssl_protocol = "") {
    rewrite ^ https://$server_name$request_uri permanent;
  }
  server_name {{ item.domain }}.erincall.com;
}

server {
  server_name  {{ item.domain }}.andrewlorente.com;
  listen      *:80;
  add_header X-Clacks-Overhead "GNU Terry Pratchett";

  return 301 https://{{ item.domain }}.erincall.com$request_uri;
}

server {
  listen      *:443 ssl;
  server_name {{ item.domain }}.erincall.com;
  root /home/{{ item.name }}/current/static;
  add_header X-Clacks-Overhead "GNU Terry Pratchett";

  ssl on;
  ssl_certificate /etc/ssl/{{item.name}}_erincall_com.chained.crt;
  ssl_certificate_key /etc/ssl/{{item.name}}_erincall_com.key;
  ssl_session_cache shared:SSL:50m;
  ssl_session_timeout 5m;

  ssl_protocols TLSv1 TLSv1.2;
  ssl_ciphers "{{ cipher_suites }}";
  ssl_prefer_server_ciphers on;
  ssl_dhparam /etc/ssl/dhparams.pem;
  location ~ / {
    proxy_pass http://{{ item.name }};

    proxy_set_header HTTP_HOST $http_host;
    proxy_set_header Host $host;
    proxy_set_header REMOTE_ADDR $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;

  }
}

server {
  server_name  {{ item.domain }}.andrewlorente.com;
  listen      *:443 ssl;
  add_header X-Clacks-Overhead "GNU Terry Pratchett";

  ssl on;
  ssl_certificate /etc/ssl/{{ item.domain }}_andrewlorente_com.chained.crt;
  ssl_certificate_key /etc/ssl/{{ item.domain }}_andrewlorente_com.key;
  ssl_session_cache shared:SSL:50m;
  ssl_session_timeout 5m;

  ssl_protocols TLSv1 TLSv1.2;
  ssl_ciphers "{{ cipher_suites }}";
  ssl_prefer_server_ciphers on;
  ssl_dhparam /etc/ssl/dhparams.pem;
  return 301 https://{{ item.domain }}.erincall.com$request_uri;
}
