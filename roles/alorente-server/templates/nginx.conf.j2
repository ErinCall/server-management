# {{ ansible_managed }}

user             www-data;
worker_processes 1;
error_log        /var/log/nginx/error.log;
pid              /var/run/nginx.pid;

events {
  worker_connections 1024;
  multi_accept       off;
}

http {
  types_hash_max_size 2048;
  server_names_hash_bucket_size 64;

  include /etc/nginx/mime.types;
  sendfile on;

  keepalive_timeout 65;
  tcp_nodelay off;

  gzip on;
  gzip_disable "MSIE [1-6]\.(?!.*SV1)";

  proxy_redirect off;
  client_max_body_size 4G;
  client_body_buffer_size 128k;
  proxy_connect_timeout 90;
  proxy_send_timeout 90;
  proxy_read_timeout 90;
  proxy_buffers 32 4k;

  proxy_set_header Host $host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

  {% for site in sites %}
    server {
      server_name  {{ site.name }}.andrewlorente.com;
      listen      *:80;
      add_header X-Clacks-Overhead "GNU Terry Pratchett";

      return 301 https://{{ site.name }}.erincall.com$request_uri;
    }
  {% endfor %}

  server {
    server_name andrewlorente.com;
    listen      *:80;
    add_header X-Clacks-Overhead "GNU Terry Pratchett";

    return 301 https://www.erincall.com$request_uri;
  }

  {% for site in sites %}
    server {
      server_name  {{ site.name }}.andrewlorente.com;
      listen      *:443 ssl;
      add_header X-Clacks-Overhead "GNU Terry Pratchett";

      ssl on;
      ssl_certificate /etc/ssl/{{site.name}}_andrewlorente_com.chained.crt;
      ssl_certificate_key /etc/ssl/{{site.name}}_andrewlorente_com.key;
      ssl_session_cache shared:SSL:50m;
      ssl_session_timeout 5m;

      ssl_protocols TLSv1 TLSv1.2;
      ssl_ciphers "EECDH+ECDSA+AESGCM EECDH+aRSA+AESGCM EECDH+ECDSA+SHA384 EECDH+ECDSA+SHA256 EECDH+aRSA+SHA384 EECDH+aRSA+SHA256 EECDH EDH+aRSA !RC4 !aNULL !eNULL !LOW !3DES !MD5 !EXP !PSK !SRP !DSS";
      ssl_prefer_server_ciphers on;
      return 301 https://{{ site.name }}.erincall.com;
    }
  {% endfor %}

  server {
    server_name  andrewlorente.com;
    listen      *:443 ssl;
    add_header X-Clacks-Overhead "GNU Terry Pratchett";

    ssl on;
    ssl_certificate /etc/ssl/www_andrewlorente_com.chained.crt;
    ssl_certificate_key /etc/ssl/www_andrewlorente_com.key;
    ssl_session_cache shared:SSL:50m;
    ssl_session_timeout 5m;

    ssl_protocols TLSv1 TLSv1.2;
    ssl_ciphers "EECDH+ECDSA+AESGCM EECDH+aRSA+AESGCM EECDH+ECDSA+SHA384 EECDH+ECDSA+SHA256 EECDH+aRSA+SHA384 EECDH+aRSA+SHA256 EECDH EDH+aRSA !RC4 !aNULL !eNULL !LOW !3DES !MD5 !EXP !PSK !SRP !DSS";
    ssl_prefer_server_ciphers on;
    return 301 https://www.erincall.com;
  }
}
